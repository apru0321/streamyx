{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@streamyx/core": ["packages/core/lib/main"],
      "@streamyx/crunchyroll": ["packages/crunchyroll/crunchyroll"],
      "dasha": ["packages/dasha"],
      "molnia": ["packages/molnia"],
      "wive": ["packages/wive"]
    }
  },
  "include": ["packages/core/src/**/*.ts"],
  "exclude": []
}
