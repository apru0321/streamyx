{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "baseUrl": "./",
    "rootDir": "./",
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": []
  },
  "include": ["package.json", "src/app/**/*.ts", "src/services/**/*.ts"],
  "exclude": ["node_modules", "packages/core", "src/app/electron", "src/app/index.ts", "packages"]
}
